@model VivaRegistry.Models.Application

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Application</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationEmail)
            </th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(model => model.ApplicationKey)
            </td>
            <td>
                @Html.DisplayFor(model => model.ApplicationName)
            </td>
            <td>
                @Html.DisplayFor(model => model.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.ApplicationEmail)
            </td>
            <td>
                @Html.ActionLink("Create New Event", "Create", "Events", new { id = Model.ApplicationId}, null)
            </td>
        </tr>
        
        @foreach (var e in Model.Events)
        {
            <tr>
                <th>
                    @Html.DisplayName(nameof(e.EventId))
                </th>
                <th>
                    @Html.DisplayName(nameof(e.EventGenerationDate))
                </th>
            </tr>
            <tr>
               <td>
                   @Html.DisplayName(e.EventId.ToString())
               </td> 
               <td>
                   @Html.DisplayName(e.EventGenerationDate.ToString())
               </td>
               <td>
                   @Html.ActionLink("Edit", "Edit", "Events", new { id = e.EventId }, null)
               </td>
               <td>
                   @Html.ActionLink("Delete", "Delete", "Events", new { id = e.EventId }, null)
               </td>
            </tr>
        }

    </table>
    <dl class="dl-horizontal">
        <dt></dt>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
