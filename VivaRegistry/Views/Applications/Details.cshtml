@model VivaRegistry.Models.Application

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Application</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationEmail)
            </th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(model => model.ApplicationKey)
            </td>
            <td>
                @Html.DisplayFor(model => model.ApplicationName)
            </td>
            <td>
                @Html.DisplayFor(model => model.CreationDate)
            </td>
            <td>
                @Html.DisplayFor(model => model.ApplicationEmail)
            </td>
        </tr>
    </table>
    @if (Model.Events.Count > 0)
    {
        <table class="table table-bordered">
            <tr>
                <th>Event ID</th>
                <th>Generation Date</th>
                <th>Log Level</th>
                <th>Edit Event</th>
                <th>Delete Event</th>
            </tr>
            @foreach (var e in Model.Events)
            {
                <tr>
                    <td>
                        @Html.DisplayName(e.EventId.ToString())
                    </td>
                    <td>
                        @Html.DisplayName(e.EventGenerationDate.ToString())
                    </td>
                    <td>
                        @Html.DisplayName(e.LogId.ToString())
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Events", new { id = e.EventId }, new { @class = "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "Events", new { id = e.EventId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    }
</div>
<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" }) @Html.ActionLink("Create New Event", "Create", "Events", new { id = Model.ApplicationId }, new { @class = "btn btn-primary"})
</p>
